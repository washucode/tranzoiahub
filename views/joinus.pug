extends layout
block content

  .section#joinus.pt-5.pb-5
    .nav.nav-pills.text-center

      
        a.btn-lg.active#nav-pills1(href='#org' data-toggle='pill') Join as an Organization
    
        a.btn-lg#nav-pills2(href='#academia' data-toggle='pill') Join as an Academia
      

    .page-content.mt-5.tab-content
      .form-v10-content.tab-pane.active#org
        
        form#myform.form-detail(action='#' method='post')
          .form-left
            h2 Personal Infomation(Organization)
            
              
            .form-group
              .form-row.form-row-1
                input#first_name.input-text(type='text' name='first_name' placeholder='First Name' required='')
              .form-row.form-row-2
                input#last_name.input-text(type='text' name='last_name' placeholder='Last Name' required='')
            .form-row
              input#your_email.input-text(type='text' name='your_email' required='' pattern='[^@]+@[^@]+.[a-zA-Z]{2,6}' placeholder='Your Email')
            
            .form-row
              input#pnumber.pmunber(type='number' name='pmunber' placeholder='+254 789 567 231' required='')
            
            .form-row.form-row-2
              select(name='Gender')
                option(value='gender') Gender
                option(value='male') Male
                option(value='female') Female
                
              span.select-btn
                i.bi.bi-caret-down
            .form-row.form-row-2
              select(name='position')
                option(value='position') Your Position/Rank in the organization
                option(value='CEO') Chief Executive Officer (CEO)
                option(value='COO') Chief Operating Officer (COO)
                option(value='CFO') Chief Financial Officer (CFO) or Controller
                option(value='CMO') Chief Marketing Officer (CMO)
                option(value='CTO') Chief Technology Officer (CTO)
                option(value='manager') Managerial Position
                option(value='employee') Employee
              span.select-btn
                i.bi.bi-caret-down
            .form-row
              input#prole.prole(type='text' name='role' placeholder='Your role in the organization' required='')

          
          .form-right
            h2 Information about the organization
            .form-row
              input#nameorg.nameorg(type='text' name='nameorg' placeholder='Name of Organization' required='')
            
            .form-group
              .form-row
                input#physicalocation.physicalocation(type='text' name='blocation' placeholder='Physcial Address' required='')
              .form-row
                input#postaladdress.postaladdress(type='text' name='baddress' placeholder='Postal Address' required='')
                
            .form-row
              input#website.website(type='text' name='website' placeholder='Website/Social Media (eg:twitter,instagram)' required='')
            .form-group
              .form-row.form-row-1
                select(name='profit' required='')
                  option(value='profit') Type of Business
                  option(value='male') Profit
                  option(value='female') Non Profit
                
                span.select-btn
                  i.bi.bi-caret-down
              .form-row.form-row
                select(name='noemployees' required='')
                  option(value='number') No of Employees
                  option(value='0-10') 0-10
                  option(value='10-20') 10-20
                  option(value='20-30') 20-30
                  option(value='30-40') 30-40
                  option(value='>50') > 50 
                
                span.select-btn
                  i.bi.bi-caret-down
            .form-row
              input#additional.additional(type='text' name='additional' placeholder='Additional Information' )
            
            
            //- .form-checkbox
            //-   label.container
            //-     p
            //-       | I do accept the 
            //-       a.text(href='#') Terms and Conditions
            //-       |  of your site.
            //-     input(type='checkbox' name='checkbox')
            //-     span.checkmark
            .form-row-last
              input.register(type='submit' name='register' value='Register ')

